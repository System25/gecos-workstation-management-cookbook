<% if !@disable_proxy and @proxy_autoconfig_url.nil? %>
pref("network.proxy.type",1);
pref("network.proxy.http_port", <%= @http_proxy_port %>);
pref("network.proxy.http","<%= @http_proxy %>");
pref("network.proxy.ssl_port", <%= @https_proxy_port %>);
pref("network.proxy.ssl","<%= @https_proxy %>");
pref("network.proxy.no_proxies_on","localhost,127.0.0.1");
<% elsif !@disable_proxy and !@proxy_autoconfig_url.nil? %>
pref("network.proxy.type", 2);
pref("network.proxy.autoconfig_url", "<%= @proxy_autoconfig_url %>");
<% elsif @disable_proxy %>
pref("network.proxy.type", 5);
<% end %>
